#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {

    /* Enter your code here. Read input from STDIN. Print output to STDOUT */
    int u,c;
    scanf("%d",&u);
    if(u<=200)
    {
        c=u*0.5;
        printf("Rs.%d",c);
    }
    else if(u<=400)
    {
        c=(u*0.65)+100;
        printf("Rs.%d",c);
    }
    else if(u<=600)
    {
        c=(u*0.80)+200;
        printf("Rs.%d",c);
    }
    else if(u>600)
    {
        c=(u*1.25)+425;
        printf("Rs.%d",c);
    }
    
    return 0;
}
